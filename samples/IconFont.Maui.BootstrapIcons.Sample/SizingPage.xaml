<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:IconFont.Maui.BootstrapIcons;assembly=IconFont.Maui.BootstrapIcons"
             x:Class="IconFont.Maui.BootstrapIcons.Sample.SizingPage"
             Title="Sizing">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Icon Sizing"
                   FontSize="24" FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="Icons scale cleanly at any size — they're vectors"
                   FontSize="14" TextColor="Gray"
                   HorizontalOptions="Center" />

            <!-- Image sizing -->
            <Label Text="Image (FontImageSource.Size)" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="Set FontImageSource.Size and match WidthRequest/HeightRequest"
                   FontSize="12" TextColor="Gray" />
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Image WidthRequest="16" HeightRequest="16">
                        <Image.Source>
                            <FontImageSource Glyph="{x:Static icons:BootstrapIcons.Bootstrap}"
                                             FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                                             Size="16" Color="#7952B3" />
                        </Image.Source>
                    </Image>
                    <Label Text="16" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Image WidthRequest="24" HeightRequest="24">
                        <Image.Source>
                            <FontImageSource Glyph="{x:Static icons:BootstrapIcons.Bootstrap}"
                                             FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                                             Size="24" Color="#7952B3" />
                        </Image.Source>
                    </Image>
                    <Label Text="24" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Image WidthRequest="32" HeightRequest="32">
                        <Image.Source>
                            <FontImageSource Glyph="{x:Static icons:BootstrapIcons.Bootstrap}"
                                             FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                                             Size="32" Color="#7952B3" />
                        </Image.Source>
                    </Image>
                    <Label Text="32" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Image WidthRequest="48" HeightRequest="48">
                        <Image.Source>
                            <FontImageSource Glyph="{x:Static icons:BootstrapIcons.Bootstrap}"
                                             FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                                             Size="48" Color="#7952B3" />
                        </Image.Source>
                    </Image>
                    <Label Text="48" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Image WidthRequest="64" HeightRequest="64">
                        <Image.Source>
                            <FontImageSource Glyph="{x:Static icons:BootstrapIcons.Bootstrap}"
                                             FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                                             Size="64" Color="#7952B3" />
                        </Image.Source>
                    </Image>
                    <Label Text="64" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Label sizing -->
            <Label Text="Label (FontSize)" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="Set FontSize on the Label — simplest approach for inline icons"
                   FontSize="12" TextColor="Gray" />
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="{x:Static icons:BootstrapIcons.StarFill}"
                           FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                           FontSize="14" TextColor="#FFC107"
                           HorizontalOptions="Center" />
                    <Label Text="14" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="{x:Static icons:BootstrapIcons.StarFill}"
                           FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                           FontSize="20" TextColor="#FFC107"
                           HorizontalOptions="Center" />
                    <Label Text="20" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="{x:Static icons:BootstrapIcons.StarFill}"
                           FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                           FontSize="28" TextColor="#FFC107"
                           HorizontalOptions="Center" />
                    <Label Text="28" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="{x:Static icons:BootstrapIcons.StarFill}"
                           FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                           FontSize="40" TextColor="#FFC107"
                           HorizontalOptions="Center" />
                    <Label Text="40" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="{x:Static icons:BootstrapIcons.StarFill}"
                           FontFamily="{x:Static icons:BootstrapIcons.FontFamily}"
                           FontSize="56" TextColor="#FFC107"
                           HorizontalOptions="Center" />
                    <Label Text="56" FontSize="10" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Multiple icons at different sizes -->
            <Label Text="Different Icons, Same Sizes" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="Consistent sizing across different icon shapes"
                   FontSize="12" TextColor="Gray" />
            <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnSpacing="10" RowSpacing="15" HorizontalOptions="Center">

                <!-- Headers -->
                <Label Grid.Row="0" Grid.Column="0" Text="16" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Grid.Row="0" Grid.Column="1" Text="24" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Grid.Row="0" Grid.Column="2" Text="32" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Grid.Row="0" Grid.Column="3" Text="48" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Grid.Row="0" Grid.Column="4" Text="64" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center" />

                <!-- House row -->
                <Image Grid.Row="1" Grid.Column="0" WidthRequest="16" HeightRequest="16">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HouseFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="16" Color="#0D6EFD" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="1" Grid.Column="1" WidthRequest="24" HeightRequest="24">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HouseFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="24" Color="#0D6EFD" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="1" Grid.Column="2" WidthRequest="32" HeightRequest="32">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HouseFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="32" Color="#0D6EFD" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="1" Grid.Column="3" WidthRequest="48" HeightRequest="48">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HouseFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="48" Color="#0D6EFD" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="1" Grid.Column="4" WidthRequest="64" HeightRequest="64">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HouseFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="64" Color="#0D6EFD" />
                    </Image.Source>
                </Image>

                <!-- Heart row -->
                <Image Grid.Row="2" Grid.Column="0" WidthRequest="16" HeightRequest="16">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HeartFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="16" Color="#DC3545" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="2" Grid.Column="1" WidthRequest="24" HeightRequest="24">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HeartFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="24" Color="#DC3545" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="2" Grid.Column="2" WidthRequest="32" HeightRequest="32">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HeartFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="32" Color="#DC3545" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="2" Grid.Column="3" WidthRequest="48" HeightRequest="48">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HeartFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="48" Color="#DC3545" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="2" Grid.Column="4" WidthRequest="64" HeightRequest="64">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.HeartFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="64" Color="#DC3545" />
                    </Image.Source>
                </Image>

                <!-- Gear row -->
                <Image Grid.Row="3" Grid.Column="0" WidthRequest="16" HeightRequest="16">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.GearFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="16" Color="#198754" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="3" Grid.Column="1" WidthRequest="24" HeightRequest="24">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.GearFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="24" Color="#198754" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="3" Grid.Column="2" WidthRequest="32" HeightRequest="32">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.GearFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="32" Color="#198754" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="3" Grid.Column="3" WidthRequest="48" HeightRequest="48">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.GearFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="48" Color="#198754" />
                    </Image.Source>
                </Image>
                <Image Grid.Row="3" Grid.Column="4" WidthRequest="64" HeightRequest="64">
                    <Image.Source>
                        <FontImageSource Glyph="{x:Static icons:BootstrapIcons.GearFill}" FontFamily="{x:Static icons:BootstrapIcons.FontFamily}" Size="64" Color="#198754" />
                    </Image.Source>
                </Image>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
